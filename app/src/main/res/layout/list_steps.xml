<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200dp"
                    android:background="@drawable/redbg"
                    android:src="@drawable/knifeandspoon"
                    android:id="@+id/ivThumbnailSteps"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/ivThumbnailSteps"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:id="@+id/tvStepsNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvStepsShortDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvIngredientsIngredient"
                        android:layout_margin="@dimen/dimen_16dp"
                        android:text="@string/ingredientsMeasure"
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>